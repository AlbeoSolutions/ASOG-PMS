<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Item title</th>
      <th>Budget</th>
      <th>Amount spent</th>
      <th>Balance left</th>
      <th>Percentage spent</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.item_title %></td>
        <td><%= item.budget %></td>
        <td><%= item.amount_spent %></td>
        <td><%= item.balance_left %></td>
        <td><%= item.percentage_spent %></td>
        <td><%= item.comments %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

