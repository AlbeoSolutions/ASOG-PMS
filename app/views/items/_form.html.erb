<%= simple_form_for @item, url: @path, method: @method do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row">
      <div class="col-md-6">
        <%= f.input :item_title %>
      </div>
      <div class="col-md-6">
        <%= f.input :budget %>
      </div>
    </div>

    <%= f.hidden_field  :project_id, :value => params[:project_id] %>
    <%= f.hidden_field :amount_spent,:value => 0 %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
