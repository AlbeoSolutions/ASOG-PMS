<div class="row project-nav">
  <%= link_to project_path(@project) do %>
    <div class="col-xs-3">
       Profile
    </div>
  <% end %>

  <%= link_to project_tasks_path(@project) do %>
    <div class="col-xs-3 project-active">
       Work Plan
    </div>
  <% end %>

  <%= link_to project_items_path(@project) do %>
    <div class="col-xs-3">
       Expenditure
    </div>
  <% end %>

  <%= link_to project_tasks_path(@project) do %>
    <div class="col-xs-3">
       Progress
    </div>
  <% end %>
</div>

<div class="main-wrapper">
  <p id="notice"><%= notice %></p>

  <div class="index-tasks">
    <h3>Project Work plan <%= link_to new_project_task_path(:project_id => params[:project_id]), class: "add-to" do %> <span class="glyphicon glyphicon-plus"></span><%end%></h3>
    <h4 class="project-heading"><%= @project.project_title%></h4><br>


    <ul class="nav nav-tabs">
      <li role="presentation" id="timeline-btn" class="active"><a onclick="showTimeline()" href="#">Timeline</a></li>
      <li role="presentation" id="table-btn"><a onclick="showTable()" href="#">Table</a></li>
    </ul><br>



    <table class="table workplan-table">
      <thead>
        <tr>
          <th>Task title</th>
          <th>Description</th>
          <th>Due date</th>
          <th>Date accomplished</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @project.tasks.each do |task| %>
            <tr>
              <td><%= task.task_title %></td>
              <td><%= task.description %></td>
              <td><%= task.due_date %></td>
              <td><%= task.date_accomplished %></td>
              <td><%= link_to 'Show', project_task_path(:id => task.id, :project_id => params[:project_id]) %></td>
              <td><%= link_to 'Edit', edit_project_task_path(:id => task.id, :project_id => params[:project_id]) %></td>
              <td><%= link_to 'Destroy', project_task_path(:id => task.id, :project_id => params[:project_id]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>


