<%= simple_form_for @task, url: project_tasks_path(@project), method: :post do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :task_title %>
    <%= f.input :description %>
    <%= f.input :due_date %>
    <%= f.input :date_accomplished %>

  </div>
  
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

