<p id="notice"><%= notice %></p>

<h1>Listing Records</h1>

<table>
  <thead>
    <tr>
      <th>Expenditure</th>
      <th>Item</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.expenditure %></td>
        <td><%= record.item %></td>
        <td><%= link_to 'Show', project_item_records_path(params[:project_id], params[:item_id]) %></td>
        <td><%= link_to 'Edit', edit_project_item_record_path(params[:project_id], params[:item_id], @records) %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

